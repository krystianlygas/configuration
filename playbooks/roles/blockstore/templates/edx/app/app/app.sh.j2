#!/usr/bin/env bash

# {{ ansible_managed }}

{% set blockstore_venv_bin = blockstore_venv_dir + "/bin" %}

{% if COMMON_ENABLE_NEWRELIC_APP %}
{% set executable = blockstore_venv_bin + '/newrelic-admin run-program ' + blockstore_venv_bin + '/gunicorn' %}
{% else %}
{% set executable = blockstore_venv_bin + '/gunicorn' %}
{% endif %}

{% if COMMON_ENABLE_NEWRELIC_APP %}
export NEW_RELIC_DISTRIBUTED_TRACING_ENABLED="{{ blockstore_enable_newrelic_distributed_tracing }}"
export NEW_RELIC_APP_NAME="{{ blockstore_newrelic_appname }}"
if command -v ec2metadata >/dev/null 2>&1; then
  INSTANCEID=$(ec2metadata --instance-id);
  HOSTNAME=$(hostname)
  export NEW_RELIC_PROCESS_HOST_DISPLAY_NAME="$HOSTNAME-$INSTANCEID"
fi
export NEW_RELIC_LICENSE_KEY="{{ NEWRELIC_LICENSE_KEY }}"
{% endif -%}

export EDX_REST_API_CLIENT_NAME="{{ COMMON_ENVIRONMENT }}-{{ COMMON_DEPLOYMENT }}-{{ blockstore_service_name }}"

source {{ blockstore_home }}/{{ blockstore_service_name }}_env
exec {{ executable }} -c {{ blockstore_home }}/{{ blockstore_service_name }}_gunicorn.py {{ BLOCKSTORE_GUNICORN_EXTRA }} {{ blockstore_wsgi_name }}.wsgi:application
