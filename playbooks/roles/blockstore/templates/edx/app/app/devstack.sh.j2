#!/usr/bin/env bash

# {{ ansible_managed }}

source {{ blockstore_home }}/{{ blockstore_service_name }}_env
COMMAND=$1

case $COMMAND in
    start)
        /edx/app/supervisor/venvs/supervisor/bin/supervisord -n --configuration /edx/app/supervisor/supervisord.conf
        ;;
    open)
        . {{ blockstore_nodeenv_bin }}/activate
        . {{ blockstore_venv_bin_dir }}/activate
        cd {{ blockstore_code_dir }}

        /bin/bash
        ;;
    exec)
        shift

        . {{ blockstore_nodeenv_bin }}/activate
        . {{ blockstore_venv_bin_dir }}/activate
        cd {{ blockstore_code_dir }}

        "$@"
        ;;
    *)
        "$@"
        ;;
esac
