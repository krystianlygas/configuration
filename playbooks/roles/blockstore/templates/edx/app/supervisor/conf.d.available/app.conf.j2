{% if blockstore_is_devstack %}
[program:nginx]
command=nginx -g 'daemon off;'
killasgroup=true
stopasgroup=true
{% endif %}

[program:{{ blockstore_service_name }}]
command={{ blockstore_home }}/{{ blockstore_service_name }}.sh
user={{ common_web_user }}
directory={{ blockstore_code_dir }}
stdout_logfile={{ supervisor_log_dir }}/%(program_name)s-stdout.log
stderr_logfile={{ supervisor_log_dir }}/%(program_name)s-stderr.log
killasgroup=true
stopasgroup=true
